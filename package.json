{
  "name": "service-name",
  "version": "1.0.0",
  "description": "This is template for map colonies typescript service",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "install": "npx husky install"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@map-colonies/js-logger": "^1.0.1",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/telemetry": "4.2.0",
    "@opentelemetry/api": "1.4.1",
    "@opentelemetry/api-metrics": "0.23.0",
    "@opentelemetry/instrumentation-http": "0.35.1",
    "config": "^3.3.9",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@map-colonies/eslint-config": "^4.0.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@types/config": "0.0.39",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/yargs": "^17.0.31",
    "commitlint": "^13.2.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "husky": "^7.0.2",
    "jest": "^29.5.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.4",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.2.4"
  }
}
